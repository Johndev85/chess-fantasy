---
// GameUI.astro - Panel de control del juego mejorado
---

<div class="side-panel" id="game-ui">
  <!-- Indicador de Turno -->
  <div class="turn-indicator" id="turn-indicator">
    <div class="turn-piece white active" id="turn-white"></div>
    <span class="turn-text" id="turn-text">Turno: Blancas</span>
    <div class="turn-piece black" id="turn-black"></div>
  </div>

  <!-- Estado de IA Pensando -->
  <div class="ai-thinking-container" id="ai-thinking-container" style="display: none;">
    <div class="ai-thinking">
      <span class="thinking-icon">ü§ñ</span>
      <div class="thinking-content">
        <span class="thinking-text">IA pensando...</span>
        <div class="progress-bar">
          <div class="progress-fill"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Controles de Volumen -->
  <div class="volume-controls">
    <div class="volume-item">
      <span class="volume-icon">üéµ</span>
      <input type="range" class="volume-slider" id="music-volume" min="0" max="100" value="50">
      <span class="volume-value" id="music-volume-value">50%</span>
    </div>
    <div class="volume-item">
      <span class="volume-icon">üîä</span>
      <input type="range" class="volume-slider" id="sfx-volume" min="0" max="100" value="70">
      <span class="volume-value" id="sfx-volume-value">70%</span>
    </div>
  </div>

  <!-- √öltimos Movimientos -->
  <div class="last-moves-section" id="last-moves-section">
    <label class="label">‚ú® √öltimos Movimientos</label>
    <div class="last-moves" id="last-moves">
      <div class="empty-moves">Esperando movimientos...</div>
    </div>
  </div>

  <!-- Piezas Capturadas -->
  <div class="captured-grid">
    <div class="captured-section">
      <label class="label">‚ö´ Capturadas Negras</label>
      <div class="captured-pieces" id="captured-black"></div>
    </div>
    
    <div class="captured-section">
      <label class="label">‚ö™ Capturadas Blancas</label>
      <div class="captured-pieces" id="captured-white"></div>
    </div>
  </div>

  <!-- Historial Completo -->
  <div class="move-history-container">
    <label class="label">üìú Historial</label>
    <div class="move-history" id="move-history">
      <!-- Movimientos se agregan din√°micamente -->
    </div>
  </div>

  <!-- Controles -->
  <div class="controls">
    <button class="btn btn-secondary" id="undo-btn">
      <span class="btn-icon">‚Ü©Ô∏è</span>
      <span>Deshacer</span>
    </button>
    <button class="btn btn-danger" id="resign-btn">
      <span class="btn-icon">üè≥Ô∏è</span>
      <span>Rendirse</span>
    </button>
    <button class="btn" id="menu-btn">
      <span class="btn-icon">üìã</span>
      <span>Men√∫</span>
    </button>
  </div>
</div>

<!-- Modal de Confirmaci√≥n de Rendici√≥n -->
<div class="modal-overlay" id="resign-modal" style="display: none;">
  <div class="modal">
    <div class="modal-icon">üè≥Ô∏è</div>
    <h2>¬øRendirse?</h2>
    <p>¬øEst√°s seguro de que quieres abandonar la partida?</p>
    <div class="modal-buttons">
      <button class="btn btn-danger" id="confirm-resign">S√≠, Rendirse</button>
      <button class="btn btn-secondary" id="cancel-resign">Cancelar</button>
    </div>
  </div>
</div>

<script>
  // Referencias
  const turnText = document.getElementById('turn-text');
  const turnWhite = document.getElementById('turn-white');
  const turnBlack = document.getElementById('turn-black');
  const aiThinkingContainer = document.getElementById('ai-thinking-container');
  const lastMoves = document.getElementById('last-moves');
  const moveHistory = document.getElementById('move-history');
  const resignModal = document.getElementById('resign-modal');

  // Actualizar indicador de turno
  window.addEventListener('turnChange', (e) => {
    const { color } = e.detail;
    if (color === 'white') {
      turnWhite.classList.add('active');
      turnBlack.classList.remove('active');
      turnText.textContent = 'Turno: Blancas';
    } else {
      turnWhite.classList.remove('active');
      turnBlack.classList.add('active');
      turnText.textContent = 'Turno: Negras';
    }
  });

  // Mostrar/ocultar pensamiento de IA
  window.addEventListener('aiThinking', (e) => {
    aiThinkingContainer.style.display = e.detail.thinking ? 'block' : 'none';
  });

  // Agregar movimiento al historial y √∫ltimos movimientos
  window.addEventListener('moveMade', (e) => {
    const { moveNumber, whiteMove, blackMove, notation } = e.detail;
    
    // Actualizar √∫ltimos movimientos (m√°ximo 5)
    updateLastMoves(notation, whiteMove ? 'white' : 'black');
    
    if (whiteMove) {
      // Nueva fila para movimiento de blancas
      const row = document.createElement('div');
      row.className = 'move-row';
      row.innerHTML = `
        <span class="move-number">${moveNumber}.</span>
        <span class="move-white">${whiteMove}</span>
        <span class="move-black"></span>
      `;
      moveHistory.appendChild(row);
      moveHistory.scrollTop = moveHistory.scrollHeight;
    } else if (blackMove) {
      // Actualizar movimiento de negras en la √∫ltima fila
      const lastRow = moveHistory.lastElementChild;
      if (lastRow) {
        lastRow.querySelector('.move-black').textContent = blackMove;
      }
    }
  });

  // Actualizar panel de √∫ltimos movimientos
  function updateLastMoves(notation, color) {
    const moveEl = document.createElement('div');
    moveEl.className = `last-move ${color}`;
    moveEl.innerHTML = `
      <span class="move-dot ${color}"></span>
      <span class="move-notation">${notation}</span>
    `;
    
    // Insertar al principio
    if (lastMoves.querySelector('.empty-moves')) {
      lastMoves.innerHTML = '';
    }
    
    lastMoves.insertBefore(moveEl, lastMoves.firstChild);
    
    // Mantener solo los √∫ltimos 5
    while (lastMoves.children.length > 5) {
      lastMoves.removeChild(lastMoves.lastChild);
    }
  }

  // Agregar pieza capturada
  window.addEventListener('pieceCaptured', (e) => {
    const { piece, color, notation } = e.detail;
    const container = document.getElementById(`captured-${color}`);
    if (container) {
      const pieceEl = document.createElement('div');
      pieceEl.className = 'captured-piece';
      pieceEl.innerHTML = piece;
      pieceEl.title = notation || '';
      container.appendChild(pieceEl);
    }
  });

  // Limpiar historial al iniciar nuevo juego
  window.addEventListener('gameReset', () => {
    lastMoves.innerHTML = '<div class="empty-moves">Esperando movimientos...</div>';
    moveHistory.innerHTML = '';
    document.getElementById('captured-black').innerHTML = '';
    document.getElementById('captured-white').innerHTML = '';
  });

  // Controles de Volumen
  const musicVolume = document.getElementById('music-volume');
  const sfxVolume = document.getElementById('sfx-volume');
  const musicVolumeValue = document.getElementById('music-volume-value');
  const sfxVolumeValue = document.getElementById('sfx-volume-value');

  musicVolume?.addEventListener('input', (e) => {
    const value = e.target.value;
    musicVolumeValue.textContent = value + '%';
    window.dispatchEvent(new CustomEvent('musicVolumeChange', { detail: { volume: value / 100 } }));
  });

  sfxVolume?.addEventListener('input', (e) => {
    const value = e.target.value;
    sfxVolumeValue.textContent = value + '%';
    window.dispatchEvent(new CustomEvent('sfxVolumeChange', { detail: { volume: value / 100 } }));
  });

  // Botones
  document.getElementById('undo-btn')?.addEventListener('click', () => {
    window.dispatchEvent(new CustomEvent('undoMove'));
  });

  // Modal de Rendici√≥n
  document.getElementById('resign-btn')?.addEventListener('click', () => {
    resignModal.style.display = 'flex';
  });

  document.getElementById('confirm-resign')?.addEventListener('click', () => {
    resignModal.style.display = 'none';
    window.dispatchEvent(new CustomEvent('resign'));
  });

  document.getElementById('cancel-resign')?.addEventListener('click', () => {
    resignModal.style.display = 'none';
  });

  // Cerrar modal al hacer click fuera
  resignModal?.addEventListener('click', (e) => {
    if (e.target === resignModal) {
      resignModal.style.display = 'none';
    }
  });

  document.getElementById('menu-btn')?.addEventListener('click', () => {
    window.dispatchEvent(new CustomEvent('returnToMenu'));
  });
</script>

<style lang="scss">
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;

  // Panel lateral mejorado - altura fija con scroll
  .side-panel {
    background: $bg-card;
    border: 3px solid lighten($bg-card, 10%);
    border-radius: 12px;
    padding: 20px;
    min-width: 280px;
    max-width: 320px;
    height: calc(100vh - 40px);
    max-height: 800px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    gap: 12px;
    overflow: hidden;

    @include respond-to(tablet) {
      min-width: auto;
      width: 100%;
      max-width: $board-size-tablet;
      height: auto;
      max-height: none;
    }

    @include respond-to(mobile) {
      padding: 15px;
    }
  }

  // Indicador de turno
  .turn-indicator {
    @include flex-center;
    gap: 15px;
    padding: 12px;
    background: linear-gradient(135deg, $bg-dark 0%, darken($bg-dark, 5%) 100%);
    border-radius: 10px;
    border: 2px solid rgba(255, 215, 0, 0.3);
    flex-shrink: 0;

    .turn-piece {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 3px solid;
      transition: all 0.3s ease;

      &.white {
        background: linear-gradient(135deg, $piece-white 0%, darken($piece-white, 15%) 100%);
        border-color: darken($piece-white, 20%);
      }

      &.black {
        background: linear-gradient(135deg, lighten($piece-black, 10%) 0%, $piece-black 100%);
        border-color: lighten($piece-black, 20%);
      }

      &.active {
        animation: pulse-turn 1.5s infinite;
        transform: scale(1.1);
      }
    }

    .turn-text {
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: 0.9rem;
      color: $accent-gold;
    }
  }

  @keyframes pulse-turn {
    0%, 100% { box-shadow: 0 0 5px currentColor; }
    50% { box-shadow: 0 0 20px currentColor; }
  }

  // IA Pensando
  .ai-thinking-container {
    background: linear-gradient(135deg, rgba($accent-purple, 0.2) 0%, rgba($accent-purple, 0.1) 100%);
    border: 2px solid rgba($accent-purple, 0.5);
    border-radius: 10px;
    padding: 10px;
    animation: slide-in 0.3s ease;
    flex-shrink: 0;
  }

  .ai-thinking {
    display: flex;
    align-items: center;
    gap: 10px;

    .thinking-icon {
      font-size: 1.8rem;
      animation: robot-bounce 0.6s infinite alternate;
    }

    .thinking-content {
      flex: 1;
    }

    .thinking-text {
      color: $accent-purple;
      font-weight: bold;
      font-size: 0.85rem;
      display: block;
      margin-bottom: 5px;
    }

    .progress-bar {
      width: 100%;
      height: 5px;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 3px;
      overflow: hidden;

      .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, $accent-purple, $accent-cyan);
        animation: progress-move 1s infinite linear;
        width: 30%;
      }
    }
  }

  // Controles de Volumen
  .volume-controls {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex-shrink: 0;

    .volume-item {
      display: flex;
      align-items: center;
      gap: 8px;

      .volume-icon {
        font-size: 1rem;
        width: 20px;
      }

      .volume-slider {
        flex: 1;
        height: 4px;
        -webkit-appearance: none;
        appearance: none;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 2px;
        outline: none;

        &::-webkit-slider-thumb {
          -webkit-appearance: none;
          appearance: none;
          width: 14px;
          height: 14px;
          background: $accent-gold;
          border-radius: 50%;
          cursor: pointer;
        }

        &::-moz-range-thumb {
          width: 14px;
          height: 14px;
          background: $accent-gold;
          border-radius: 50%;
          cursor: pointer;
          border: none;
        }
      }

      .volume-value {
        font-size: 0.75rem;
        color: $text-secondary;
        min-width: 35px;
        text-align: right;
      }
    }
  }

  // √öltimos Movimientos - altura fija
  .last-moves-section {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    padding: 10px;
    border: 1px solid rgba(255, 215, 0, 0.2);
    flex-shrink: 0;

    .label {
      color: $accent-gold;
      margin-bottom: 8px;
      font-size: 0.8rem;
      display: block;
    }
  }

  .last-moves {
    max-height: 120px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 5px;

    .empty-moves {
      text-align: center;
      color: $text-secondary;
      font-style: italic;
      padding: 8px;
      font-size: 0.8rem;
    }

    .last-move {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 6px 10px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 5px;
      font-family: 'Courier New', monospace;
      font-size: 0.85rem;
      animation: fade-in-move 0.3s ease;
      border-left: 2px solid transparent;

      &.white {
        border-left-color: $piece-white;
        background: linear-gradient(90deg, rgba(245, 245, 220, 0.1) 0%, transparent 100%);
      }

      &.black {
        border-left-color: lighten($piece-black, 30%);
        background: linear-gradient(90deg, rgba(100, 100, 100, 0.2) 0%, transparent 100%);
      }

      .move-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;

        &.white {
          background: $piece-white;
          box-shadow: 0 0 3px $piece-white;
        }

        &.black {
          background: lighten($piece-black, 30%);
        }
      }

      .move-notation {
        color: $text-primary;
        font-weight: bold;
      }
    }
  }

  // Capturas
  .captured-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    flex-shrink: 0;
  }

  .captured-section {
    background: rgba(0, 0, 0, 0.15);
    border-radius: 8px;
    padding: 8px;

    .label {
      font-size: 0.7rem;
      margin-bottom: 5px;
      display: block;
    }
  }

  .captured-pieces {
    display: flex;
    flex-wrap: wrap;
    gap: 3px;
    min-height: 30px;
    max-height: 60px;
    overflow-y: auto;

    .captured-piece {
      width: 24px;
      height: 24px;
      opacity: 0.8;
      @include pixel-art;
      transition: transform 0.2s ease;

      &:hover {
        transform: scale(1.2);
        opacity: 1;
      }
    }
  }

  // Historial - scrollable
  .move-history-container {
    flex: 1;
    min-height: 0;
    display: flex;
    flex-direction: column;

    .label {
      margin-bottom: 8px;
      font-size: 0.8rem;
      flex-shrink: 0;
    }
  }

  .move-history {
    flex: 1;
    overflow-y: auto;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    padding: 10px;
    max-height: 180px;

    .move-row {
      display: flex;
      justify-content: space-between;
      padding: 4px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;

      &:last-child {
        border-bottom: none;
      }

      .move-number {
        color: $text-secondary;
        width: 30px;
        font-size: 0.75rem;
      }

      .move-white,
      .move-black {
        flex: 1;
        text-align: center;
        color: $text-primary;

        &:empty::after {
          content: '...';
          color: $text-secondary;
        }
      }

      .move-white {
        color: lighten($piece-white, 10%);
      }

      .move-black {
        color: lighten($piece-black, 40%);
      }
    }
  }

  // Controles
  .controls {
    display: flex;
    flex-direction: column;
    gap: 6px;
    padding-top: 12px;
    border-top: 2px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;

    .btn {
      @include pixel-button($accent-purple);
      padding: 10px 14px;
      font-size: 0.85rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;

      &.btn-primary {
        @include pixel-button($accent-gold, $bg-dark);
      }

      &.btn-danger {
        @include pixel-button($accent-red);
      }

      &.btn-secondary {
        @include pixel-button($bg-card);
      }

      .btn-icon {
        font-size: 1rem;
      }

      &:hover {
        transform: translateY(-2px);
      }
    }
  }

  // Modal de Rendici√≥n
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    @include flex-center;
    z-index: 1000;
    backdrop-filter: blur(4px);
    animation: fade-in 0.3s ease;
  }

  .modal {
    background: $bg-card;
    border: 4px solid $accent-gold;
    border-radius: 12px;
    padding: 30px;
    text-align: center;
    max-width: 90%;
    width: 350px;
    box-shadow: 
      0 0 0 4px $bg-dark,
      0 20px 60px rgba(0, 0, 0, 0.5);
    animation: modal-pop 0.3s ease;

    .modal-icon {
      font-size: 3rem;
      margin-bottom: 15px;
    }

    h2 {
      @include pixel-text($accent-gold);
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    p {
      color: $text-secondary;
      margin-bottom: 20px;
      font-size: 1rem;
    }
  }

  .modal-buttons {
    display: flex;
    gap: 10px;
    justify-content: center;

    .btn {
      padding: 12px 20px;
      font-size: 0.9rem;
    }
  }

  @keyframes modal-pop {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  // Scrollbars personalizadas
  .last-moves::-webkit-scrollbar,
  .move-history::-webkit-scrollbar,
  .captured-pieces::-webkit-scrollbar {
    width: 4px;
  }

  .last-moves::-webkit-scrollbar-track,
  .move-history::-webkit-scrollbar-track,
  .captured-pieces::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 2px;
  }

  .last-moves::-webkit-scrollbar-thumb,
  .move-history::-webkit-scrollbar-thumb,
  .captured-pieces::-webkit-scrollbar-thumb {
    background: rgba(255, 215, 0, 0.3);
    border-radius: 2px;

    &:hover {
      background: rgba(255, 215, 0, 0.5);
    }
  }
</style>
